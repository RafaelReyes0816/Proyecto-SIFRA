@model Tienda_Repuestos_Demo.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1" style="color: #ffffff; font-weight: 700;">九勇 Editar Cliente</h2>
        <p class="text-muted mb-0">Modifica la informaci칩n del cliente</p>
    </div>
</div>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>丘멆잺 Error:</strong> @ViewBag.Error
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post" id="editForm">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="display: none;"></div>
            <input type="hidden" asp-for="IdCliente" />
            <input type="hidden" asp-for="FechaRegistro" />
            
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Correo" class="form-label">游닎 Correo Electr칩nico</label>
                <input asp-for="Correo" type="email" class="form-control" required />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="contrase침a" class="form-label">游 Contrase침a</label>
                <input type="password" class="form-control" id="contrase침a" name="contrase침a" placeholder="Dejar vac칤o para mantener la actual" />
                <small class="text-muted">Dejar vac칤o para mantener la contrase침a actual. Ingresar nueva contrase침a solo si desea cambiarla.</small>
            </div>

            <div class="mb-3">
                <label asp-for="Telefono" class="form-label">游 Tel칠fono</label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Direccion" class="form-label"></label>
                <textarea asp-for="Direccion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input type="hidden" name="Verificado" value="false" />
                    <input type="checkbox" name="Verificado" value="true" class="form-check-input" @(Model.Verificado ? "checked" : "") id="Verificado" />
                    <label class="form-check-label" for="Verificado">Cliente Verificado</label>
                </div>
                <small class="text-muted">Marca esta casilla para verificar al cliente manualmente</small>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Mostrar errores de validaci칩n si existen
        $(document).ready(function() {
            var validationSummary = $('.alert-danger');
            if (validationSummary.find('li').length > 0 || validationSummary.text().trim() !== '') {
                validationSummary.show();
            }
        });

        // Prevenir env칤o doble del formulario
        $('#editForm').on('submit', function() {
            var $submitBtn = $(this).find('button[type="submit"]');
            $submitBtn.prop('disabled', true).text('Guardando...');
        });
    </script>
}
