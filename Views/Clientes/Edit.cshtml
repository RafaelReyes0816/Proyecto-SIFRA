@model Tienda_Repuestos_Demo.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1" style="color: #ffffff; font-weight: 700;">‚úèÔ∏è Editar Cliente</h2>
        <p class="text-muted mb-0">Modifica la informaci√≥n del cliente</p>
    </div>
</div>

@if (ViewBag.Error != null)
{
    <div class="d-none" id="viewBagError" data-error="@ViewBag.Error"></div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" id="editForm">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="d-none"></div>
            <input type="hidden" asp-for="IdCliente" />
            <input type="hidden" asp-for="FechaRegistro" />
            
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Correo" class="form-label">üìß Correo Electr√≥nico</label>
                <input asp-for="Correo" type="email" class="form-control" required />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="contrase√±a" class="form-label">üîí Contrase√±a</label>
                <input type="password" class="form-control" id="contrase√±a" name="contrase√±a" placeholder="Dejar vac√≠o para mantener la actual" />
                <small class="text-muted">Dejar vac√≠o para mantener la contrase√±a actual. Ingresar nueva contrase√±a solo si desea cambiarla.</small>
            </div>

            <div class="mb-3">
                <label asp-for="Telefono" class="form-label">üìû Tel√©fono</label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Direccion" class="form-label"></label>
                <textarea asp-for="Direccion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="fotoCI" class="form-label">üÜî Foto de C√©dula de Identidad</label>
                @if (!string.IsNullOrEmpty(Model.FotoCI))
                {
                    <div class="mb-2">
                        <img src="@Model.FotoCI" alt="Foto CI" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                        <p class="text-muted small mb-0">Foto actual del CI</p>
                    </div>
                }
                <input type="file" class="form-control" id="fotoCI" name="fotoCI" accept="image/*" />
                <small class="text-muted">
                    Formatos permitidos: JPG, PNG, GIF. Tama√±o m√°ximo: 5MB. Dejar vac√≠o para mantener la foto actual.<br>
                    <strong class="text-success">‚úÖ Si subes un CI nuevo, el cliente ser√° verificado autom√°ticamente</strong>
                </small>
            </div>

            <div class="mb-3">
                <div class="form-check">
                    <input type="hidden" name="Verificado" value="false" />
                    <input type="checkbox" name="Verificado" value="true" class="form-check-input" @(Model.Verificado ? "checked" : "") id="Verificado" />
                    <label class="form-check-label" for="Verificado">Cliente Verificado</label>
                </div>
                <small class="text-muted">Marca esta casilla para verificar al cliente manualmente. Si subes un CI nuevo, se verificar√° autom√°ticamente.</small>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Mostrar errores de validaci√≥n si existen
        $(document).ready(function() {
            var validationSummary = $('.alert-danger');
            if (validationSummary.find('li').length > 0 || validationSummary.text().trim() !== '') {
                validationSummary.show();
            }
        });

        // Prevenir env√≠o doble del formulario
        $('#editForm').on('submit', function() {
            var $submitBtn = $(this).find('button[type="submit"]');
            $submitBtn.prop('disabled', true).text('Guardando...');
        });
    </script>
}
