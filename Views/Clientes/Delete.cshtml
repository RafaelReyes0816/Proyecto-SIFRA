@model Tienda_Repuestos_Demo.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar Cliente</h2>
<hr />

<h3>¿Está seguro que desea eliminar este cliente?</h3>
<div class="card mt-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nombre:</dt>
            <dd class="col-sm-9">@Model.Nombre</dd>

            <dt class="col-sm-3">Correo:</dt>
            <dd class="col-sm-9">@Model.Correo</dd>

            <dt class="col-sm-3">Teléfono:</dt>
            <dd class="col-sm-9">@(Model.Telefono ?? "N/A")</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="IdCliente" />
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
