@model Tienda_Repuestos_Demo.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
            <h2 class="mb-1" style="color: #ffffff; font-weight: 700;">‚ûï Crear Nuevo Usuario</h2>
        <p class="text-muted mb-0">Agrega un nuevo usuario al sistema (admin o vendedor)</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <strong>‚ö†Ô∏è Error:</strong> @ViewBag.Error
                    </div>
                }

                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="display: none;"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label">üë§ Nombre Completo</label>
                        <input asp-for="Nombre" class="form-control" required placeholder="Nombre del usuario" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Correo" class="form-label">üìß Correo Electr√≥nico</label>
                        <input asp-for="Correo" type="email" class="form-control" required placeholder="usuario@tienda.com" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Contrase√±a" class="form-label">üîí Contrase√±a</label>
                        <input asp-for="Contrase√±a" type="password" class="form-control" required placeholder="Contrase√±a del usuario" />
                        <span asp-validation-for="Contrase√±a" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Rol" class="form-label">üé≠ Rol</label>
                        <select asp-for="Rol" class="form-select" asp-items="ViewBag.Roles" required>
                            <option value="">Seleccione un rol...</option>
                        </select>
                        <span asp-validation-for="Rol" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input asp-for="Activo" class="form-check-input" type="checkbox" checked />
                            <label asp-for="Activo" class="form-check-label">Usuario Activo</label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">‚úÖ Crear Usuario</button>
                        <a asp-action="Index" class="btn btn-secondary">‚Ü©Ô∏è Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            var validationSummary = $('.alert-danger');
            if (validationSummary.find('li').length > 0 || validationSummary.text().trim() !== '') {
                validationSummary.show();
            }
        });
    </script>
}
