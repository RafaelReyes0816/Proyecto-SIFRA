@model Tienda_Repuestos_Demo.Models.Categoria

@{
    ViewData["Title"] = "Detalles de la Categor√≠a";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1" style="color: #ffffff; font-weight: 700;">üìÇ Detalles de la Categor√≠a</h2>
            <p class="text-muted mb-0">Informaci√≥n completa de la categor√≠a</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">üìã Informaci√≥n General</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4" style="color: var(--text-medium);">üìÇ Nombre:</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.Nombre</strong>
                            <span class="badge bg-info ms-2">üìÇ</span>
                        </dd>

                        <dt class="col-sm-4" style="color: var(--text-medium);">üì¶ Productos:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">@Model.Productos.Count producto(s)</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Productos.Any())
    {
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">üì¶ Productos de esta Categor√≠a</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>C√≥digo</th>
                                        <th>Nombre</th>
                                        <th>Proveedor</th>
                                        <th>Precio Venta</th>
                                        <th>Stock</th>
                                        <th>Acci√≥n</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var producto in Model.Productos)
                                    {
                                        <tr>
                                            <td><strong>@(producto.Codigo ?? "N/A")</strong></td>
                                            <td>@producto.Nombre</td>
                                            <td>@producto.Proveedor?.Nombre</td>
                                            <td>BS @producto.PrecioVenta.ToString("N2")</td>
                                            <td>
                                                <span class="badge @(producto.Stock > 0 ? "bg-success" : "bg-danger")">
                                                    @producto.Stock unidades
                                                </span>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", "Productos", new { id = producto.IdProducto })" 
                                                   class="btn btn-sm btn-info">üëÅÔ∏è Ver</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="alert alert-info">
                    <strong>‚ÑπÔ∏è Informaci√≥n:</strong> Esta categor√≠a no tiene productos asociados a√∫n.
                </div>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        @if (Context.Session.GetString("UsuarioRol") == "admin")
        {
            <a asp-action="Edit" asp-route-id="@Model.IdCategoria" class="btn btn-warning">Editar</a>
        }
    </div>
</div>
