@model IEnumerable<Tienda_Repuestos_Demo.Models.Categoria>

@{
    ViewData["Title"] = "Categor√≠as";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-column flex-md-row">
        <div class="mb-3 mb-md-0 flex-grow-1">
            <h2 class="mb-1" style="color: #ffffff; font-weight: 700;">üìÇ Gesti√≥n de Categor√≠as</h2>
            <p class="text-muted mb-0">Administra las categor√≠as de productos</p>
        </div>
        @if (Context.Session.GetString("UsuarioRol") == "admin")
        {
            <a asp-action="Create" class="btn btn-primary w-100 w-md-auto flex-shrink-0">
                ‚ûï Nueva Categor√≠a
            </a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>‚úÖ √âxito:</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>‚ö†Ô∏è Error:</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <!-- Versi√≥n Desktop: Tabla -->
            <div class="d-none d-md-block">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Productos</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.Nombre</strong>
                                        <span class="badge bg-info ms-2">üìÇ</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@item.Productos.Count producto(s)</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.IdCategoria" class="btn btn-sm btn-info">üëÅÔ∏è Ver</a>
                                            @if (Context.Session.GetString("UsuarioRol") == "admin")
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.IdCategoria" class="btn btn-sm btn-warning">‚úèÔ∏è Editar</a>
                                                <a asp-action="Delete" asp-route-id="@item.IdCategoria" class="btn btn-sm btn-danger">üóëÔ∏è Eliminar</a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Versi√≥n M√≥vil: Cards -->
            <div class="d-block d-md-none">
                @foreach (var item in Model)
                {
                    <div class="card mb-3" style="border-left: 4px solid #17a2b8;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h6 class="mb-1" style="color: #212529; font-weight: 700;">üìÇ @item.Nombre</h6>
                                </div>
                                <span class="badge bg-primary">@item.Productos.Count producto(s)</span>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@item.IdCategoria" class="btn btn-sm btn-info">üëÅÔ∏è Ver Detalles</a>
                                @if (Context.Session.GetString("UsuarioRol") == "admin")
                                {
                                    <a asp-action="Edit" asp-route-id="@item.IdCategoria" class="btn btn-sm btn-warning">‚úèÔ∏è Editar</a>
                                    <a asp-action="Delete" asp-route-id="@item.IdCategoria" class="btn btn-sm btn-danger">üóëÔ∏è Eliminar</a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
