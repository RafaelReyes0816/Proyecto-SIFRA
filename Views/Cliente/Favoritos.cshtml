@{
    ViewData["Title"] = "Mis Productos Favoritos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    // Convertimos a List<dynamic>
    var source = ViewBag.ProductosFavoritos as System.Collections.IEnumerable;
    var productosFavoritos = source?.Cast<dynamic>().ToList() ?? new List<dynamic>();
    
    var totalFavoritos = ViewBag.TotalFavoritos as int?;
    
    // Extraemos el primer producto de forma segura para usarlo en el resumen
    var topProducto = productosFavoritos.FirstOrDefault();
}

<div class="container-fluid dark-theme" style="min-height: 100vh; padding: 2rem;">
    <div class="d-flex justify-content-between align-items-center mb-4 fade-in-up flex-column flex-lg-row">
        <div class="mb-3 mb-lg-0 flex-grow-1">
            <h2 class="mb-1" style="font-weight: 700; color: #ffffff;">‚≠ê Mis Productos Favoritos</h2>
            <p class="mb-0" style="color: #b8b8b8;">Productos que has comprado con mayor frecuencia</p>
        </div>
        <a asp-action="Dashboard" class="btn btn-outline-light w-100 w-lg-auto flex-shrink-0">
            ‚Üê Volver al Dashboard
        </a>
    </div>

    <!-- Estad√≠stica de Favoritos -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="stat-card-dark bg-dark-primary">
                <div class="row align-items-center">
                    <div class="col-md-8 mb-3 mb-md-0">
                        <h5>üõçÔ∏è Total de Productos en tu Lista</h5>
                        <h2>@(totalFavoritos ?? 0) Productos</h2>
                        <small style="opacity: 0.8;">Basado en tus compras anteriores</small>
                    </div>
                    <div class="col-md-4 text-md-end text-center">
                        <a asp-controller="Productos" asp-action="Index" class="btn btn-success btn-lg w-100 w-lg-auto">
                            üõí Explorar M√°s Productos
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de Productos Favoritos -->
    <div class="row">
        <div class="col-md-12">
            <div class="card fade-in-up">
                <div class="card-header">
                    <h5 class="mb-0 icon-glow">üì¶ Tus Productos M√°s Comprados</h5>
                </div>
                <div class="card-body">
                    @if (productosFavoritos.Count > 0)
                    {
                        <!-- Versi√≥n Desktop: Tabla -->
                        <div class="d-none d-md-block">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Ranking</th>
                                            <th>Producto</th>
                                            <th>Categor√≠a</th>
                                            <th>Precio</th>
                                            <th>Veces Comprado</th>
                                            <th>Total Gastado</th>
                                            <th>√öltima Compra</th>
                                            <th>Stock</th>
                                            <th>Acci√≥n</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{int ranking = 1;}
                                        @foreach (var rawItem in productosFavoritos)
                                        {
                                            // Casting expl√≠cito y check de nulidad para evitar CS8602
                                            var producto = rawItem as dynamic;
                                            if (producto == null) continue;

                                            var stock = (int)(producto.Stock ?? 0);
                                            var stockBajo = stock <= 5;
                                            var medallaIcon = ranking == 1 ? "ü•á" : ranking == 2 ? "ü•à" : ranking == 3 ? "ü•â" : "üèÖ";
                                            
                                            <tr>
                                                <td>
                                                    <span style="font-size: 1.5rem;">@medallaIcon</span>
                                                    <strong style="color: #667eea;">#@ranking</strong>
                                                </td>
                                                <td>
                                                    <strong style="color: #212529;">@(producto.ProductoNombre ?? "Sin Nombre")</strong>
                                                    @if (producto.ProductoDescripcion != null)
                                                    {
                                                        <br />
                                                        <small class="text-muted">@producto.ProductoDescripcion</small>
                                                    }
                                                </td>
                                                <td>
                                                    <span class="badge bg-info">@(producto.CategoriaNombre ?? "N/A")</span>
                                                </td>
                                                <td>
                                                    <strong style="color: #28a745; font-size: 1.1rem;">
                                                        BS @(((decimal)(producto.Precio ?? 0)).ToString("N2"))
                                                    </strong>
                                                </td>
                                                <td>
                                                    <span class="badge bg-primary" style="font-size: 1rem; padding: 0.5rem 1rem;">
                                                        @(producto.CantidadComprada ?? 0) unidades
                                                    </span>
                                                </td>
                                                <td>
                                                    <strong style="color: #0d6efd;">
                                                        BS @(((decimal)(producto.TotalGastado ?? 0)).ToString("N2"))
                                                    </strong>
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        @(producto.UltimaCompra != null ? producto.UltimaCompra.ToString("dd/MM/yyyy") : "-")
                                                    </small>
                                                </td>
                                                <td>
                                                    @if (stockBajo)
                                                    {
                                                        <span class="badge bg-warning">
                                                            ‚ö†Ô∏è @stock disponibles
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-success">
                                                            ‚úÖ @stock disponibles
                                                        </span>
                                                    }
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("Details", "Productos", new { id = producto.ProductoId })" class="btn btn-sm btn-info">
                                                        üëÅÔ∏è Ver
                                                    </a>
                                                </td>
                                            </tr>
                                            ranking++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Versi√≥n M√≥vil: Cards -->
                        <div class="d-block d-md-none">
                            @{int rankingMobile = 1;}
                            @foreach (var rawItem in productosFavoritos)
                            {
                                var producto = rawItem as dynamic;
                                if (producto == null) continue;

                                var stock = (int)(producto.Stock ?? 0);
                                var stockBajo = stock <= 5;
                                var medallaIcon = rankingMobile == 1 ? "ü•á" : rankingMobile == 2 ? "ü•à" : rankingMobile == 3 ? "ü•â" : "üèÖ";
                                var borderColor = stockBajo ? "#ffc107" : "#28a745";
                                
                                <div class="card mb-3" style="border-left: 4px solid @borderColor;">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <div class="d-flex align-items-center mb-1">
                                                    <span style="font-size: 1.5rem; margin-right: 0.5rem;">@medallaIcon</span>
                                                    <strong style="color: #667eea;">#@rankingMobile</strong>
                                                </div>
                                                <h6 class="mb-1" style="color: #212529; font-weight: 700;">@(producto.ProductoNombre ?? "Sin Nombre")</h6>
                                                @if (producto.ProductoDescripcion != null)
                                                {
                                                    <small class="text-muted">@producto.ProductoDescripcion</small>
                                                }
                                            </div>
                                            @if (stockBajo)
                                            {
                                                <span class="badge bg-warning">‚ö†Ô∏è Bajo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">‚úÖ Stock OK</span>
                                            }
                                        </div>
                                        
                                        <div class="mb-2">
                                            <strong style="color: #495057;">Categor√≠a:</strong>
                                            <span class="badge bg-info">@(producto.CategoriaNombre ?? "N/A")</span>
                                        </div>
                                        
                                        <div class="row mb-2">
                                            <div class="col-6">
                                                <strong style="color: #495057;">Precio:</strong>
                                                <span style="color: #28a745; font-weight: 700; font-size: 1.1rem;">BS @(((decimal)(producto.Precio ?? 0)).ToString("N2"))</span>
                                            </div>
                                            <div class="col-6">
                                                <strong style="color: #495057;">Stock:</strong>
                                                <span class="badge bg-@(stockBajo ? "warning" : "success")">@stock disponibles</span>
                                            </div>
                                        </div>
                                        
                                        <div class="row mb-2">
                                            <div class="col-6">
                                                <strong style="color: #495057;">Comprado:</strong>
                                                <span class="badge bg-primary">@(producto.CantidadComprada ?? 0) veces</span>
                                            </div>
                                            <div class="col-6">
                                                <strong style="color: #495057;">√öltima:</strong>
                                                <small class="text-muted">
                                                    @(producto.UltimaCompra != null ? producto.UltimaCompra.ToString("dd/MM/yyyy") : "-")
                                                </small>
                                            </div>
                                        </div>
                                        
                                        <div class="mb-3">
                                            <strong style="color: #495057;">Total Gastado:</strong>
                                            <span style="color: #0d6efd; font-size: 1.1rem; font-weight: 700;">BS @(((decimal)(producto.TotalGastado ?? 0)).ToString("N2"))</span>
                                        </div>
                                        
                                        <div class="d-grid">
                                            <a href="@Url.Action("Details", "Productos", new { id = producto.ProductoId })" class="btn btn-sm btn-info">
                                                üëÅÔ∏è Ver Detalles del Producto
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                rankingMobile++;
                            }
                        </div>

                        <!-- Informaci√≥n Adicional -->
                        <div class="mt-4 p-3" style="background: #ffffff; border-radius: 10px; border: 1px solid #dee2e6;">
                            <div class="row text-center">
                                <div class="col-md-4 mb-3 mb-md-0">
                                    <div style="font-size: 2rem; margin-bottom: 0.5rem;">üèÜ</div>
                                    <h6 style="color: #212529; font-weight: 600;">Producto Favorito</h6>
                                    <!-- Aqu√≠ usamos la variable segura topProducto -->
                                    <p style="color: #495057; font-weight: 500;" class="small mb-0">@(topProducto?.ProductoNombre ?? "N/A")</p>
                                </div>
                                <div class="col-md-4 mb-3 mb-md-0">
                                    <div style="font-size: 2rem; margin-bottom: 0.5rem;">üìä</div>
                                    <h6 style="color: #212529; font-weight: 600;">Total Productos</h6>
                                    <p style="color: #495057; font-weight: 500;" class="small mb-0">@(totalFavoritos ?? 0) en tu lista</p>
                                </div>
                                <div class="col-md-4">
                                    <div style="font-size: 2rem; margin-bottom: 0.5rem;">üí∞</div>
                                    <h6 style="color: #212529; font-weight: 600;">Total Invertido</h6>
                                    <p style="color: #495057; font-weight: 500;" class="small mb-0">
                                        BS @{
                                            var totalInvertido = 0m;
                                            foreach (var p in productosFavoritos)
                                            {
                                                if(p != null) {
                                                    totalInvertido += (decimal)(p.TotalGastado ?? 0);
                                                }
                                            }
                                            @totalInvertido.ToString("N2")
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div style="font-size: 4rem; margin-bottom: 1rem; opacity: 0.5;">‚≠ê</div>
                            <h5 class="mb-3" style="color: #b0b0b0;">A√∫n no tienes productos favoritos</h5>
                            <p class="text-muted mb-4">
                                Tus productos favoritos aparecer√°n aqu√≠ basados en tu historial de compras
                            </p>
                            <a asp-controller="Productos" asp-action="Index" class="btn btn-primary btn-lg">
                                üõí Explorar Cat√°logo de Productos
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recomendaciones -->
    @if (productosFavoritos.Count > 0)
    {
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card fade-in-up">
                    <div class="card-header">
                        <h5 class="mb-0 icon-glow">üí° Recomendaciones Basadas en tus Favoritos</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert" style="background: #ffffff; border: 1px solid #667eea; color: #212529;">
                            <h6 style="color: #667eea; font-weight: 600;">‚ú® Sugerencia:</h6>
                            <p class="mb-2" style="color: #495057;">
                                Bas√°ndonos en tus productos favoritos, te recomendamos revisar productos similares 
                                en la misma categor√≠a o de precios similares.
                            </p>
                            <a asp-controller="Productos" asp-action="Index" class="btn btn-sm" style="background-color: #dc3545; color: #ffffff; border: 1px solid #dc3545; font-weight: 600;">
                                Ver Cat√°logo Completo ‚Üí
                            </a>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <div class="p-3" style="background: #ffffff; border: 1px solid #28a745; border-radius: 10px;">
                                    <h6 style="color: #28a745; font-weight: 600; margin-bottom: 1rem;">üì¶ Compras Inteligentes</h6>
                                    <p style="color: #495057;" class="small mb-0">
                                        Algunos de tus productos favoritos tienen stock bajo. 
                                        ¬°Considera hacer tu pedido pronto!
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-3" style="background: #ffffff; border: 1px solid #17a2b8; border-radius: 10px;">
                                    <h6 style="color: #17a2b8; font-weight: 600; margin-bottom: 1rem;">üîî Notificaciones</h6>
                                    <p style="color: #495057;" class="small mb-0">
                                        Revisa la secci√≥n de notificaciones para estar al tanto 
                                        del estado de tus compras.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
