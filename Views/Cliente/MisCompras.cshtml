@model IEnumerable<Tienda_Repuestos_Demo.Models.Venta>

@{
    ViewData["Title"] = "Mis Compras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="padding: 2rem;">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-column flex-lg-row">
        <div class="mb-3 mb-lg-0 flex-grow-1">
            <h2 class="mb-1" style="color: #ffffff; font-weight: 700;">üõçÔ∏è Mis Compras</h2>
            <p class="text-muted mb-0">Historial completo de tus compras</p>
        </div>
        <a asp-controller="Productos" asp-action="Index" class="btn btn-primary w-100 w-lg-auto flex-shrink-0">üõí Seguir Comprando</a>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <!-- Versi√≥n Desktop: Tabla -->
                <div class="d-none d-md-block">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Fecha</th>
                                    <th>Tipo</th>
                                    <th>Estado</th>
                                    <th>M√©todo Pago</th>
                                    <th>Total</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var venta in Model)
                                {
                                    <tr>
                                        <td><strong>#@venta.IdVenta</strong></td>
                                        <td>@venta.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            <span class="badge bg-info">@venta.TipoVenta</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-@(venta.Estado == "confirmada" ? "success" : venta.Estado == "pendiente" ? "warning" : "danger")">
                                                @venta.Estado
                                            </span>
                                        </td>
                                        <td>@venta.MetodoPago</td>
                                        <td><strong>BS @venta.Total.ToString("N2")</strong></td>
                                        <td>
                                            <a href="@Url.Action("Details", "Ventas", new { id = venta.IdVenta })" class="btn btn-sm btn-info">üëÅÔ∏è Ver Detalles</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Versi√≥n M√≥vil: Cards -->
                <div class="d-block d-md-none">
                    @foreach (var venta in Model)
                    {
                        <div class="card mb-3" style="border-left: 4px solid var(--primary-color);">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="mb-1" style="color: #212529; font-weight: 700;">Compra #@venta.IdVenta</h6>
                                        <small class="text-muted">@venta.Fecha.ToString("dd/MM/yyyy HH:mm")</small>
                                    </div>
                                    <span class="badge bg-@(venta.Estado == "confirmada" ? "success" : venta.Estado == "pendiente" ? "warning" : "danger")">
                                        @venta.Estado
                                    </span>
                                </div>
                                
                                <div class="row mb-2">
                                    <div class="col-6">
                                        <strong style="color: #495057;">Tipo:</strong>
                                        <span class="badge bg-info">@venta.TipoVenta</span>
                                    </div>
                                    <div class="col-6">
                                        <strong style="color: #495057;">Pago:</strong>
                                        <span style="color: #212529;">@venta.MetodoPago</span>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <strong style="color: #495057;">Total:</strong>
                                    <span style="color: #28a745; font-size: 1.2rem; font-weight: 700;">BS @venta.Total.ToString("N2")</span>
                                </div>
                                
                                <div class="d-grid">
                                    <a href="@Url.Action("Details", "Ventas", new { id = venta.IdVenta })" class="btn btn-sm btn-info">üëÅÔ∏è Ver Detalles</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <p class="text-muted mb-3" style="font-size: 1.1rem;">A√∫n no has realizado ninguna compra</p>
                    <a asp-controller="Productos" asp-action="Index" class="btn btn-primary btn-lg">üõí Ver Cat√°logo de Productos</a>
                </div>
            }
        </div>
    </div>
</div>
