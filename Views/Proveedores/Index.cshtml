@model IEnumerable<Tienda_Repuestos_Demo.Models.Proveedor>

@{
    ViewData["Title"] = "Proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1" style="color: var(--text-dark); font-weight: 700;">üè¢ Gesti√≥n de Proveedores</h2>
            <p class="text-muted mb-0">Administra los proveedores de productos</p>
        </div>
        @if (Context.Session.GetString("UsuarioRol") == "admin")
        {
            <a asp-action="Create" class="btn btn-primary">
                ‚ûï Nuevo Proveedor
            </a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>‚úÖ √âxito:</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <strong>‚ö†Ô∏è Error:</strong> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Contacto</th>
                        <th>Tel√©fono</th>
                        <th>Correo</th>
                        <th>Productos</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><strong>@item.Nombre</strong></td>
                            <td>@(item.Contacto ?? "N/A")</td>
                            <td>@(item.Telefono ?? "N/A")</td>
                            <td>@(item.Correo ?? "N/A")</td>
                            <td>
                                <span class="badge bg-info">@item.Productos.Count producto(s)</span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.IdProveedor" class="btn btn-sm btn-info">üëÅÔ∏è Ver</a>
                                    @if (Context.Session.GetString("UsuarioRol") == "admin")
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.IdProveedor" class="btn btn-sm btn-warning">‚úèÔ∏è Editar</a>
                                        <a asp-action="Delete" asp-route-id="@item.IdProveedor" class="btn btn-sm btn-danger">üóëÔ∏è Eliminar</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
