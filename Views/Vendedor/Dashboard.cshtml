@{
    ViewData["Title"] = "Dashboard - Vendedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var stats = ViewBag.Estadisticas as dynamic;
    var ventasRecientes = ViewBag.VentasRecientes as List<Tienda_Repuestos_Demo.Models.Venta>;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1" style="color: #ffffff; font-weight: 700;">ğŸ‘¤ Dashboard - Vendedor</h2>
            <p class="text-muted mb-0">Bienvenido, @Context.Session.GetString("UsuarioNombre")</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="stat-card bg-primary">
                <h5>ğŸ“Š Ventas Hoy</h5>
                <h2>@stats?.VentasHoy</h2>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="stat-card bg-success">
                <h5>ğŸ“… Ventas del Mes</h5>
                <h2>@stats?.VentasMes</h2>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="stat-card bg-info">
                <h5>ğŸ’° Total Ventas</h5>
                <h2>@stats?.TotalVentas</h2>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="stat-card bg-warning">
                <h5>ğŸ’µ Ingresos del Mes</h5>
                <h2>BS @(stats?.IngresosMes?.ToString("N2") ?? "0.00")</h2>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">ğŸ“‹ Ventas Recientes</h5>
                </div>
                <div class="card-body">
                    @if (ventasRecientes != null && ventasRecientes.Any())
                    {
                        <!-- VersiÃ³n Desktop: Tabla -->
                        <div class="d-none d-md-block">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Fecha</th>
                                            <th>Cliente</th>
                                            <th>Tipo</th>
                                            <th>Estado</th>
                                            <th>Total</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var venta in ventasRecientes)
                                        {
                                            <tr>
                                                <td>@venta.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>@venta.Cliente.Nombre</td>
                                                <td>@venta.TipoVenta</td>
                                                <td>
                                                    <span class="badge bg-@(venta.Estado == "confirmada" ? "success" : venta.Estado == "pendiente" ? "warning" : "danger")">
                                                        @venta.Estado
                                                    </span>
                                                </td>
                                                <td>BS @venta.Total.ToString("N2")</td>
                                                <td>
                                                    <a href="@Url.Action("Details", "Ventas", new { id = venta.IdVenta })" class="btn btn-sm btn-info">Ver</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- VersiÃ³n MÃ³vil: Cards -->
                        <div class="d-block d-md-none">
                            @foreach (var venta in ventasRecientes)
                            {
                                <div class="card mb-3" style="border-left: 4px solid var(--primary-color);">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div>
                                                <h6 class="mb-1" style="color: #212529; font-weight: 700;">Venta #@venta.IdVenta</h6>
                                                <small class="text-muted">@venta.Fecha.ToString("dd/MM/yyyy HH:mm")</small>
                                            </div>
                                            <span class="badge bg-@(venta.Estado == "confirmada" ? "success" : venta.Estado == "pendiente" ? "warning" : "danger")">
                                                @venta.Estado
                                            </span>
                                        </div>
                                        
                                        <div class="mb-2">
                                            <strong style="color: #495057;">Cliente:</strong>
                                            <span style="color: #212529;">@venta.Cliente.Nombre</span>
                                        </div>
                                        
                                        <div class="row mb-2">
                                            <div class="col-6">
                                                <strong style="color: #495057;">Tipo:</strong>
                                                <span class="badge bg-info">@venta.TipoVenta</span>
                                            </div>
                                            <div class="col-6">
                                                <strong style="color: #495057;">Total:</strong>
                                                <span style="color: #28a745; font-weight: 700;">BS @venta.Total.ToString("N2")</span>
                                            </div>
                                        </div>
                                        
                                        <div class="d-grid">
                                            <a href="@Url.Action("Details", "Ventas", new { id = venta.IdVenta })" class="btn btn-sm btn-info">ğŸ‘ï¸ Ver Detalles</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No hay ventas recientes.</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">âš¡ Acciones RÃ¡pidas</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Create", "Ventas")" class="btn btn-primary">
                            â• Nueva Venta
                        </a>
                        <a href="@Url.Action("Index", "Ventas")" class="btn btn-info">
                            ğŸ“‹ Ver Todas las Ventas
                        </a>
                        <a href="@Url.Action("Index", "Productos")" class="btn btn-success">
                            ğŸ“¦ Ver Productos
                        </a>
                        <a href="@Url.Action("Index", "Clientes")" class="btn btn-secondary">
                            ğŸ‘¤ Ver Clientes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
