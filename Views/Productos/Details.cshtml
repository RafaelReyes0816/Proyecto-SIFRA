@model Tienda_Repuestos_Demo.Models.Producto
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Detalles del Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var clienteVerificado = ViewBag.ClienteVerificado as bool? ?? false;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1" style="color: #ffffff; font-weight: 700;">üì¶ Detalles del Producto</h2>
            <p class="text-muted mb-0">Informaci√≥n completa del producto</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">üìã Informaci√≥n General</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4" style="color: var(--text-medium);">üè∑Ô∏è C√≥digo:</dt>
                        <dd class="col-sm-8"><strong>@(Model.Codigo ?? "N/A")</strong></dd>

                        <dt class="col-sm-4" style="color: var(--text-medium);">üì¶ Nombre:</dt>
                        <dd class="col-sm-8"><strong>@Model.Nombre</strong></dd>

                        <dt class="col-sm-4" style="color: var(--text-medium);">üìù Descripci√≥n:</dt>
                        <dd class="col-sm-8">@(Model.Descripcion ?? "Sin descripci√≥n")</dd>

                        <dt class="col-sm-4" style="color: var(--text-medium);">üìÇ Categor√≠a:</dt>
                        <dd class="col-sm-8"><span class="badge bg-info">@Model.Categoria?.Nombre</span></dd>

                        <dt class="col-sm-4" style="color: var(--text-medium);">üè¢ Proveedor:</dt>
                        <dd class="col-sm-8">@Model.Proveedor?.Nombre</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">üí∞ Precios y Stock</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-6" style="color: var(--text-medium);">üíµ Precio Compra:</dt>
                        <dd class="col-sm-6"><strong>BS @Model.PrecioCompra.ToString("N2")</strong></dd>

                        <dt class="col-sm-6" style="color: var(--text-medium);">üí≤ Precio Venta:</dt>
                        <dd class="col-sm-6"><strong class="text-success">BS @Model.PrecioVenta.ToString("N2")</strong></dd>

                        <dt class="col-sm-6" style="color: var(--text-medium);">üìä Stock:</dt>
                        <dd class="col-sm-6">
                            <span class="@(Model.Stock <= Model.StockMinimo ? "badge bg-danger" : "badge bg-success")" style="font-size: 1rem;">
                                @Model.Stock unidades
                            </span>
                        </dd>

                        <dt class="col-sm-6" style="color: var(--text-medium);">‚ö†Ô∏è Stock M√≠nimo:</dt>
                        <dd class="col-sm-6">@Model.StockMinimo unidades</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        @if (Context.Session.GetString("UsuarioRol") == "cliente" && Model.Stock > 0)
        {
            @if (clienteVerificado)
            {
                <a asp-action="Comprar" asp-route-id="@Model.IdProducto" class="btn btn-success btn-lg">
                    üõí Comprar Ahora
                </a>
            }
            else
            {
                <button type="button" 
                        class="btn btn-success btn-lg" 
                        data-bs-toggle="modal" 
                        data-bs-target="#modalVerificacionDetails">
                    üõí Comprar Ahora
                </button>
            }
        }
        @if (Context.Session.GetString("UsuarioRol") == "admin")
        {
            <a asp-action="Edit" asp-route-id="@Model.IdProducto" class="btn btn-warning">Editar</a>
        }
    </div>
</div>

<!-- Modal de Verificaci√≥n Requerida para Details -->
@if (Context.Session.GetString("UsuarioRol") == "cliente" && !clienteVerificado && Model.Stock > 0)
{
    <div class="modal fade" id="modalVerificacionDetails" tabindex="-1" aria-labelledby="modalVerificacionDetailsLabel" aria-hidden="true" data-bs-backdrop="false" data-bs-keyboard="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content logout-modal-content">
                <div class="modal-header logout-modal-header">
                    <h5 class="modal-title" id="modalVerificacionDetailsLabel">
                        <span style="font-size: 1.5rem; margin-right: 0.5rem;">üÜî</span>
                        Verificaci√≥n Requerida
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body logout-modal-body">
                    <div class="text-center mb-3">
                        <div style="font-size: 3rem; margin-bottom: 1rem;">‚ö†Ô∏è</div>
                        <p class="mb-2" style="font-size: 1.1rem; font-weight: 600; color: #ffffff;">
                            Para realizar compras, necesitas verificar tu identidad
                        </p>
                        <p class="mb-3" style="font-size: 0.95rem; color: rgba(255, 255, 255, 0.8);">
                            Por favor, sube una foto de tu c√©dula de identidad (CI) en tu perfil para poder realizar compras en nuestra tienda.
                        </p>
                        <div class="alert alert-info" style="background-color: rgba(23, 162, 184, 0.2); border-color: #17a2b8; color: #ffffff; text-align: left;">
                            <strong>üìã Pasos a seguir:</strong>
                            <ol class="mb-0 mt-2" style="padding-left: 1.5rem;">
                                <li>Ve a tu perfil</li>
                                <li>Sube una foto clara de tu CI</li>
                                <li>Tu cuenta ser√° verificada autom√°ticamente</li>
                                <li>¬°Listo! Ya podr√°s realizar compras</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <div class="modal-footer logout-modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <span style="margin-right: 0.5rem;">‚ùå</span>
                        Cancelar
                    </button>
                    <a asp-controller="Cliente" asp-action="Perfil" class="btn btn-primary">
                        <span style="margin-right: 0.5rem;">üë§</span>
                        Ir a Mi Perfil
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Eliminar cualquier backdrop que aparezca
        document.addEventListener('DOMContentLoaded', function() {
            // Limpiar inmediatamente
            var backdrops = document.querySelectorAll('.modal-backdrop');
            backdrops.forEach(function(backdrop) {
                backdrop.remove();
            });
            document.body.classList.remove('modal-open');
            
            // Limpiar cada 100ms
            setInterval(function() {
                var backdrops = document.querySelectorAll('.modal-backdrop');
                backdrops.forEach(function(backdrop) {
                    backdrop.remove();
                });
                var modalsAbiertos = document.querySelectorAll('.modal.show');
                if (modalsAbiertos.length === 0) {
                    document.body.classList.remove('modal-open');
                    document.body.style.overflow = '';
                    document.body.style.paddingRight = '';
                }
            }, 100);
        });
    </script>
}
