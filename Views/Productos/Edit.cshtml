@model Tienda_Repuestos_Demo.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
            <h2 class="mb-1" style="color: #ffffff; font-weight: 700;">✏️ Editar Producto</h2>
        <p class="text-muted mb-0">Modifica la información del producto</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="display: none;"></div>
            <input type="hidden" asp-for="IdProducto" />
            
            <div class="mb-3">
                <label asp-for="Codigo" class="form-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Descripcion" class="form-label"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdCategoria" class="form-label">Categoría *</label>
                <select asp-for="IdCategoria" class="form-select" asp-items="ViewBag.IdCategoria" required>
                    <option value="">-- Seleccione una categoría --</option>
                </select>
                <span asp-validation-for="IdCategoria" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdProveedor" class="form-label">Proveedor *</label>
                <select asp-for="IdProveedor" class="form-select" asp-items="ViewBag.IdProveedor" required>
                    <option value="">-- Seleccione un proveedor --</option>
                </select>
                <span asp-validation-for="IdProveedor" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="PrecioCompra" class="form-label">Precio de Compra</label>
                    <input asp-for="PrecioCompra" class="form-control" type="number" step="0.01" required />
                    <span asp-validation-for="PrecioCompra" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="PrecioVenta" class="form-label">Precio de Venta</label>
                    <input asp-for="PrecioVenta" class="form-control" type="number" step="0.01" required />
                    <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Stock" class="form-label"></label>
                    <input asp-for="Stock" class="form-control" type="number" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="StockMinimo" class="form-label">Stock Mínimo</label>
                    <input asp-for="StockMinimo" class="form-control" type="number" />
                    <span asp-validation-for="StockMinimo" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Mostrar errores de validación si existen
        $(document).ready(function() {
            var validationSummary = $('.alert-danger');
            var hasErrors = false;
            
            $('span[asp-validation-for]').each(function() {
                if ($(this).text().trim() !== '') {
                    hasErrors = true;
                }
            });
            
            if (validationSummary.find('li').length > 0 || validationSummary.text().trim() !== '') {
                hasErrors = true;
            }
            
            if (hasErrors) {
                validationSummary.show();
            }
        });
    </script>
}
