@model IEnumerable<Tienda_Repuestos_Demo.Models.Producto>

@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var productosBajoStock = Model.Where(p => p.Stock <= p.StockMinimo).ToList();
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1" style="color: #ffffff; font-weight: 700;">üì¶ Gesti√≥n de Productos</h2>
            <p class="text-muted mb-0">Administra el cat√°logo de productos</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>‚úÖ √âxito:</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
        @if (Context.Session.GetString("UsuarioRol") == "admin")
        {
            <a asp-action="Create" class="btn btn-primary">
                ‚ûï Nuevo Producto
            </a>
        }
    </div>

    @if (productosBajoStock.Any())
    {
        <div class="alert alert-warning mb-4" role="alert" style="border-left: 4px solid var(--warning-color);">
            <h5 class="alert-heading mb-2">
                ‚ö†Ô∏è <strong>Alerta de Stock Bajo</strong>
            </h5>
            <p class="mb-0">
                Hay <strong>@productosBajoStock.Count</strong> producto(s) con stock bajo o agotado. 
                Los productos con stock bajo aparecen resaltados en <span class="badge bg-warning">amarillo</span> en la tabla.
            </p>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>C√≥digo</th>
                        <th>Nombre</th>
                        <th>Categor√≠a</th>
                        <th>Proveedor</th>
                        <th>Precio Venta</th>
                        <th>Stock</th>
                        <th>Stock M√≠nimo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var stockBajo = item.Stock <= item.StockMinimo;
                        var stockCritico = item.Stock <= 0 || (item.StockMinimo > 0 && item.Stock <= (item.StockMinimo * 0.5));
                        var nivelAlerta = item.Stock <= 0 ? "Agotado" : 
                                         item.Stock <= (item.StockMinimo * 0.5) ? "Cr√≠tico" : "Bajo";
                        var badgeColor = item.Stock <= 0 ? "danger" : 
                                        item.Stock <= (item.StockMinimo * 0.5) ? "danger" : "warning";
                        
                        <tr class="@(stockCritico ? "table-danger" : stockBajo ? "table-warning" : "")">
                            <td><strong>@item.Codigo</strong></td>
                            <td>@item.Nombre</td>
                            <td>@item.Categoria?.Nombre</td>
                            <td>@item.Proveedor?.Nombre</td>
                            <td>$@item.PrecioVenta.ToString("N2")</td>
                            <td>
                                <span class="@(stockBajo ? "text-danger fw-bold" : "")">
                                    @item.Stock
                                </span>
                                @if (stockBajo)
                                {
                                    <span class="badge bg-@badgeColor ms-2">‚ö†Ô∏è @nivelAlerta</span>
                                }
                            </td>
                            <td>@item.StockMinimo</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.IdProducto" class="btn btn-sm btn-info">üëÅÔ∏è Ver</a>
                                    @if (Context.Session.GetString("UsuarioRol") == "admin")
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-sm btn-warning">‚úèÔ∏è Editar</a>
                                        <a asp-action="Delete" asp-route-id="@item.IdProducto" class="btn btn-sm btn-danger">üóëÔ∏è Eliminar</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
