@model Tienda_Repuestos_Demo.Models.Producto
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Comprar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var producto = ViewBag.Producto as Tienda_Repuestos_Demo.Models.Producto;
    var clienteNoVerificado = ViewBag.ClienteNoVerificado as bool? ?? false;
    var clienteId = ViewBag.ClienteId;
}

@if (producto == null)
{
    <div class="alert alert-danger">
        Producto no encontrado
    </div>
    return;
}

<div class="container-fluid" style="padding: 2rem;">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">üõí Realizar Compra</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <strong>‚ö†Ô∏è Error:</strong> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            <div class="bg-primary text-white rounded p-4 mb-3" style="font-size: 4rem;">
                                üì¶
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h3>@producto.Nombre</h3>
                            <p class="text-muted">@producto.Descripcion</p>
                            <div class="mb-2">
                                <span class="badge bg-info">@producto.Categoria?.Nombre</span>
                                @if (!string.IsNullOrEmpty(producto.Codigo))
                                {
                                    <span class="badge bg-secondary">C√≥digo: @producto.Codigo</span>
                                }
                            </div>
                            <div class="mt-3">
                                <h4 class="text-success mb-0">
                                    Precio: <strong>BS @producto.PrecioVenta.ToString("N2")</strong>
                                </h4>
                                <small class="text-muted">Por unidad</small>
                            </div>
                            <div class="mt-2">
                                <span class="badge @(producto.Stock > 10 ? "bg-success" : producto.Stock > 5 ? "bg-warning" : "bg-danger")">
                                    Stock disponible: @producto.Stock unidades
                                </span>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Comprar" method="post" id="compraForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@producto.IdProducto" />

                        <div class="mb-3">
                            <label for="cantidad" class="form-label">üìä Cantidad</label>
                            <input type="number" 
                                   class="form-control" 
                                   id="cantidad" 
                                   name="cantidad" 
                                   min="1" 
                                   max="@producto.Stock" 
                                   value="1" 
                                   required
                                   onchange="calcularTotal()">
                            <small class="text-muted">M√°ximo disponible: @producto.Stock unidades</small>
                        </div>

                        <div class="mb-3">
                            <label for="metodoPago" class="form-label">üí≥ M√©todo de Pago</label>
                            <select class="form-select" id="metodoPago" name="metodoPago" required>
                                <option value="transferencia">Transferencia Bancaria</option>
                                <option value="qr">QR (Pago M√≥vil)</option>
                                <option value="efectivo">Efectivo (Al retirar)</option>
                            </select>
                        </div>

                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="mb-0">Total a Pagar</h5>
                                        <small class="text-muted">Precio unitario √ó Cantidad</small>
                                    </div>
                                    <div class="text-end">
                                        <h3 class="text-success mb-0" id="totalPagar">
                                            BS @producto.PrecioVenta.ToString("N2")
                                        </h3>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                            @if (clienteNoVerificado)
                            {
                                <button type="button" class="btn btn-success btn-lg" data-bs-toggle="modal" data-bs-target="#modalVerificacion">
                                    ‚úÖ Confirmar Compra
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success btn-lg">
                                    ‚úÖ Confirmar Compra
                                </button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Verificaci√≥n Requerida -->
@if (clienteNoVerificado)
{
    <div class="modal fade" id="modalVerificacion" tabindex="-1" aria-labelledby="modalVerificacionLabel" aria-hidden="true" data-bs-backdrop="false" data-bs-keyboard="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content logout-modal-content">
                <div class="modal-header logout-modal-header">
                    <h5 class="modal-title" id="modalVerificacionLabel">
                        <span style="font-size: 1.5rem; margin-right: 0.5rem;">üÜî</span>
                        Verificaci√≥n Requerida
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body logout-modal-body">
                    <div class="text-center mb-3">
                        <div style="font-size: 3rem; margin-bottom: 1rem;">‚ö†Ô∏è</div>
                        <p class="mb-2" style="font-size: 1.1rem; font-weight: 600; color: #ffffff;">
                            Para realizar compras, necesitas verificar tu identidad
                        </p>
                        <p class="mb-3" style="font-size: 0.95rem; color: rgba(255, 255, 255, 0.8);">
                            Por favor, sube una foto de tu c√©dula de identidad (CI) en tu perfil para poder realizar compras en nuestra tienda.
                        </p>
                        <div class="alert alert-info" style="background-color: rgba(23, 162, 184, 0.2); border-color: #17a2b8; color: #ffffff; text-align: left;">
                            <strong>üìã Pasos a seguir:</strong>
                            <ol class="mb-0 mt-2" style="padding-left: 1.5rem;">
                                <li>Ve a tu perfil</li>
                                <li>Sube una foto clara de tu CI</li>
                                <li>Tu cuenta ser√° verificada autom√°ticamente</li>
                                <li>¬°Listo! Ya podr√°s realizar compras</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <div class="modal-footer logout-modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <span style="margin-right: 0.5rem;">‚ùå</span>
                        Cancelar
                    </button>
                    <a asp-controller="Cliente" asp-action="Perfil" class="btn btn-primary">
                        <span style="margin-right: 0.5rem;">üë§</span>
                        Ir a Mi Perfil
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Eliminar cualquier backdrop que aparezca
        document.addEventListener('DOMContentLoaded', function() {
            // Limpiar inmediatamente
            var backdrops = document.querySelectorAll('.modal-backdrop');
            backdrops.forEach(function(backdrop) {
                backdrop.remove();
            });
            document.body.classList.remove('modal-open');
            
            // Limpiar cada 100ms
            setInterval(function() {
                var backdrops = document.querySelectorAll('.modal-backdrop');
                backdrops.forEach(function(backdrop) {
                    backdrop.remove();
                });
                var modalsAbiertos = document.querySelectorAll('.modal.show');
                if (modalsAbiertos.length === 0) {
                    document.body.classList.remove('modal-open');
                    document.body.style.overflow = '';
                    document.body.style.paddingRight = '';
                }
            }, 100);
        });

        const precioUnitario = @producto.PrecioVenta;

        function calcularTotal() {
            const cantidad = parseInt(document.getElementById('cantidad').value) || 1;
            const total = precioUnitario * cantidad;
            document.getElementById('totalPagar').textContent = '$' + total.toFixed(2);
        }

        // Validar cantidad al enviar
        document.getElementById('compraForm').addEventListener('submit', function(e) {
            const cantidad = parseInt(document.getElementById('cantidad').value);
            const stockMaximo = @producto.Stock;

            if (cantidad <= 0) {
                e.preventDefault();
                alert('La cantidad debe ser mayor a 0');
                return false;
            }

            if (cantidad > stockMaximo) {
                e.preventDefault();
                alert('No hay suficiente stock disponible. M√°ximo: ' + stockMaximo + ' unidades');
                return false;
            }
        });
    </script>
}
