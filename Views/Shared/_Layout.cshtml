<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tienda de Repuestos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tienda_Repuestos_Demo.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark mb-2" style="position: relative; z-index: 1030;">
            <div class="container-fluid">
                <span class="navbar-brand" style="cursor: default;">
                    <strong>üîß Tienda de Repuestos</strong>
                </span>
                <div class="navbar-collapse collapse show d-lg-flex justify-content-between">
                    @{
                        var usuarioRol = Context.Session.GetString("UsuarioRol");
                        var usuarioNombre = Context.Session.GetString("UsuarioNombre");
                    }
                    
                    @if (!string.IsNullOrEmpty(usuarioRol))
                    {
                        <ul class="navbar-nav flex-grow-1">
                            @if (usuarioRol == "admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Productos" asp-action="Index">Productos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Categorias" asp-action="Index">Categor√≠as</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Proveedores" asp-action="Index">Proveedores</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Clientes" asp-action="Index">Clientes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Ventas" asp-action="Index">Ventas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Reportes">Reportes</a>
                                </li>
                            }
                            else if (usuarioRol == "vendedor")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Vendedor" asp-action="Dashboard">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Ventas" asp-action="Index">Ventas</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Productos" asp-action="Index">Productos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Clientes" asp-action="Index">Clientes</a>
                                </li>
                            }
                            else if (usuarioRol == "cliente")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Cliente" asp-action="Dashboard">Mi Cuenta</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Cliente" asp-action="MisCompras">Mis Compras</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Productos" asp-action="Index">Cat√°logo</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Cliente" asp-action="Notificaciones">Notificaciones</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Cliente" asp-action="Favoritos">Favoritos</a>
                                </li>
                            }
                        </ul>
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <button type="button" class="nav-link btn-user-info" data-bs-toggle="modal" data-bs-target="#logoutModal" style="border: none; background: none; cursor: pointer; color: rgba(255, 255, 255, 0.9) !important;">
                                    <span style="opacity: 0.9;">
                                        üë§ @usuarioNombre <span class="badge bg-danger">@usuarioRol</span>
                                    </span>
                                </button>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Iniciar Sesi√≥n</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid px-3 px-md-4 py-3 py-md-4 flex-grow-1">
        <main role="main" class="pb-4 fade-in">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto">
        <div class="container-fluid text-center px-3">
            <p class="mb-0">&copy; 2025 - Tienda de Repuestos | Sistema de Gesti√≥n de Inventario y Ventas</p>
        </div>
    </footer>

    <!-- Modal de Error -->
    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content logout-modal-content">
                <div class="modal-header logout-modal-header">
                    <h5 class="modal-title" id="errorModalLabel">
                        <span style="font-size: 1.5rem; margin-right: 0.5rem;">‚ö†Ô∏è</span>
                        Error de Validaci√≥n
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body logout-modal-body">
                    <div class="text-center mb-3">
                        <div style="font-size: 3rem; margin-bottom: 1rem;">‚ùå</div>
                        <p class="mb-2" style="font-size: 1.1rem; font-weight: 600;" id="errorModalMessage">
                            Por favor, corrige los errores en el formulario.
                        </p>
                        <ul id="errorModalList" class="text-start" style="list-style: none; padding: 0;">
                        </ul>
                    </div>
                </div>
                <div class="modal-footer logout-modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">
                        <span style="margin-right: 0.5rem;">‚úÖ</span>
                        Entendido
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmaci√≥n para Cerrar Sesi√≥n -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content logout-modal-content">
                <div class="modal-header logout-modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">
                        <span style="font-size: 1.5rem; margin-right: 0.5rem;">üö™</span>
                        Confirmar Cierre de Sesi√≥n
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body logout-modal-body">
                    <div class="text-center mb-3">
                        <div style="font-size: 3rem; margin-bottom: 1rem;">‚ö†Ô∏è</div>
                        <p class="mb-2" style="font-size: 1.1rem; font-weight: 600;">
                            ¬øEst√°s seguro que deseas cerrar sesi√≥n?
                        </p>
                        <p class="text-muted mb-0" style="font-size: 0.95rem;">
                            Ser√°s redirigido a la p√°gina de inicio de sesi√≥n.
                        </p>
                    </div>
                </div>
                <div class="modal-footer logout-modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <span style="margin-right: 0.5rem;">‚ùå</span>
                        Cancelar
                    </button>
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-danger btn-logout-confirm">
                        <span style="margin-right: 0.5rem;">‚úÖ</span>
                        S√≠, Cerrar Sesi√≥n
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>