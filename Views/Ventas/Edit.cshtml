@model Tienda_Repuestos_Demo.Models.Venta

@{
    ViewData["Title"] = "Editar Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1" style="color: var(--text-dark); font-weight: 700;">✏️ Editar Venta</h2>
        <p class="text-muted mb-0">Modifica la información de la venta</p>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdVenta" />
            <input type="hidden" asp-for="IdVendedor" />
            
            <div class="mb-3">
                <label asp-for="IdCliente" class="form-label">Cliente</label>
                <select asp-for="IdCliente" class="form-select" asp-items="ViewBag.IdCliente" required></select>
                <span asp-validation-for="IdCliente" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TipoVenta" class="form-label">Tipo de Venta</label>
                <select asp-for="TipoVenta" class="form-select" required>
                    <option value="presencial" selected="@(Model.TipoVenta == "presencial")">Presencial</option>
                    <option value="web" selected="@(Model.TipoVenta == "web")">Web</option>
                </select>
                <span asp-validation-for="TipoVenta" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Estado" class="form-label">Estado</label>
                <select asp-for="Estado" class="form-select" required>
                    <option value="pendiente" selected="@(Model.Estado == "pendiente")">Pendiente</option>
                    <option value="confirmada" selected="@(Model.Estado == "confirmada")">Confirmada</option>
                    <option value="cancelada" selected="@(Model.Estado == "cancelada")">Cancelada</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MetodoPago" class="form-label">Método de Pago</label>
                <select asp-for="MetodoPago" class="form-select" required>
                    <option value="efectivo" selected="@(Model.MetodoPago == "efectivo")">Efectivo</option>
                    <option value="qr" selected="@(Model.MetodoPago == "qr")">QR</option>
                    <option value="transferencia" selected="@(Model.MetodoPago == "transferencia")">Transferencia</option>
                </select>
                <span asp-validation-for="MetodoPago" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ComprobantePago" class="form-label">Comprobante de Pago</label>
                <input asp-for="ComprobantePago" class="form-control" />
                <span asp-validation-for="ComprobantePago" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Total" class="form-label">Total</label>
                <input asp-for="Total" class="form-control" type="number" step="0.01" required />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
