@model Tienda_Repuestos_Demo.Models.Venta
@using Microsoft.AspNetCore.Http

@{
    ViewData["Title"] = "Detalles de la Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1" style="color: #ffffff; font-weight: 700;"> Detalles de la Venta #@Model.IdVenta</h2>
            <p class="text-muted mb-0">Informaci贸n completa de la venta</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Informaci贸n de la Venta</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-5">Fecha:</dt>
                        <dd class="col-sm-7">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-5">Cliente:</dt>
                        <dd class="col-sm-7">@Model.Cliente.Nombre</dd>

                        <dt class="col-sm-5">Vendedor:</dt>
                        <dd class="col-sm-7">@Model.Vendedor.Nombre</dd>

                        <dt class="col-sm-5">Tipo de Venta:</dt>
                        <dd class="col-sm-7">@Model.TipoVenta</dd>

                        <dt class="col-sm-5">Estado:</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-@(Model.Estado == "confirmada" ? "success" : Model.Estado == "pendiente" ? "warning" : "danger")">
                                @Model.Estado
                            </span>
                        </dd>

                        <dt class="col-sm-5">M茅todo de Pago:</dt>
                        <dd class="col-sm-7">@Model.MetodoPago</dd>

                        <dt class="col-sm-5">Comprobante:</dt>
                        <dd class="col-sm-7">@(Model.ComprobantePago ?? "N/A")</dd>

                        <dt class="col-sm-5"><strong>Total:</strong></dt>
                        <dd class="col-sm-7"><strong>BS @Model.Total.ToString("N2")</strong></dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5>Detalles de Productos</h5>
                </div>
                <div class="card-body">
                    @if (Model.DetallesVenta != null && Model.DetallesVenta.Any())
                    {
                        <!-- Versi贸n Desktop: Tabla -->
                        <div class="d-none d-md-block">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Producto</th>
                                            <th>Cantidad</th>
                                            <th>Precio Unit.</th>
                                            <th>Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var detalle in Model.DetallesVenta)
                                        {
                                            <tr>
                                                <td>@detalle.Producto?.Nombre</td>
                                                <td>@detalle.Cantidad</td>
                                                <td>BS @detalle.PrecioUnitario.ToString("N2")</td>
                                                <td>BS @((detalle.Cantidad * detalle.PrecioUnitario).ToString("N2"))</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Versi贸n M贸vil: Cards -->
                        <div class="d-block d-md-none">
                            @foreach (var detalle in Model.DetallesVenta)
                            {
                                <div class="card mb-3" style="border-left: 4px solid #17a2b8;">
                                    <div class="card-body">
                                        <h6 class="mb-2" style="color: #212529; font-weight: 700;">@detalle.Producto?.Nombre</h6>
                                        
                                        <div class="row mb-2">
                                            <div class="col-6">
                                                <strong style="color: #495057;">Cantidad:</strong>
                                                <span style="color: #212529;">@detalle.Cantidad</span>
                                            </div>
                                            <div class="col-6">
                                                <strong style="color: #495057;">Precio Unit.:</strong>
                                                <span style="color: #212529;">BS @detalle.PrecioUnitario.ToString("N2")</span>
                                            </div>
                                        </div>
                                        
                                        <div class="mb-0">
                                            <strong style="color: #495057;">Subtotal:</strong>
                                            <span style="color: #28a745; font-size: 1.1rem; font-weight: 700;">BS @((detalle.Cantidad * detalle.PrecioUnitario).ToString("N2"))</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No hay detalles de productos registrados.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        @{
            var rol = Context.Session.GetString("UsuarioRol");
            
            // Bot贸n "Volver" seg煤n el rol
            if (rol == "cliente")
            {
                <a asp-controller="Cliente" asp-action="MisCompras" class="btn btn-secondary">Volver a Mis Compras</a>
            }
            else
            {
                <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
            }
            
            // Solo mostrar bot贸n de editar para admin y vendedor (no para clientes)
            if (rol != "cliente")
            {
                <a asp-action="Edit" asp-route-id="@Model.IdVenta" class="btn btn-warning">Editar</a>
            }
        }
        @if (Model.Estado == "confirmada")
        {
            <a asp-action="DescargarComprobante" asp-route-id="@Model.IdVenta" class="btn btn-success">
                 Descargar Comprobante PDF
            </a>
        }
    </div>
</div>
