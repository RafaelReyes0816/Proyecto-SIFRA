@model IEnumerable<Tienda_Repuestos_Demo.Models.Venta>

@{
    ViewData["Title"] = "Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1" style="color: var(--text-dark); font-weight: 700;">üí∞ Gesti√≥n de Ventas</h2>
            <p class="text-muted mb-0">Administra las ventas realizadas</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            ‚ûï Nueva Venta
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Fecha</th>
                        <th>Cliente</th>
                        <th>Vendedor</th>
                        <th>Tipo</th>
                        <th>Estado</th>
                        <th>M√©todo Pago</th>
                        <th>Total</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdVenta</td>
                            <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.Cliente.Nombre</td>
                            <td>@item.Vendedor.Nombre</td>
                            <td>@item.TipoVenta</td>
                            <td>
                                <span class="badge bg-@(item.Estado == "confirmada" ? "success" : item.Estado == "pendiente" ? "warning" : "danger")">
                                    @item.Estado
                                </span>
                            </td>
                            <td>@item.MetodoPago</td>
                            <td>$@item.Total.ToString("N2")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.IdVenta" class="btn btn-sm btn-info">üëÅÔ∏è Ver</a>
                                    <a asp-action="Edit" asp-route-id="@item.IdVenta" class="btn btn-sm btn-warning">‚úèÔ∏è Editar</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
