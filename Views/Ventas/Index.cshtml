@model IEnumerable<Tienda_Repuestos_Demo.Models.Venta>

@{
    ViewData["Title"] = "Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-column flex-md-row">
        <div class="mb-3 mb-md-0 flex-grow-1">
            <h2 class="mb-1" style="color: #ffffff; font-weight: 700;">üí∞ Gesti√≥n de Ventas</h2>
            <p class="text-muted mb-0">Administra las ventas realizadas</p>
        </div>
        <a asp-action="Create" class="btn btn-primary w-100 w-md-auto flex-shrink-0">
            ‚ûï Nueva Venta
        </a>
    </div>

    <div class="card">
        <div class="card-body">
            <!-- Versi√≥n Desktop: Tabla -->
            <div class="d-none d-md-block">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Fecha</th>
                                <th>Cliente</th>
                                <th>Vendedor</th>
                                <th>Tipo</th>
                                <th>Estado</th>
                                <th>M√©todo Pago</th>
                                <th>Comprobante</th>
                                <th>Total</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.IdVenta</td>
                                    <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@item.Cliente.Nombre</td>
                                    <td>@item.Vendedor.Nombre</td>
                                    <td>@item.TipoVenta</td>
                                    <td>
                                        <span class="badge bg-@(item.Estado == "confirmada" ? "success" : item.Estado == "pendiente" ? "warning" : "danger")">
                                            @item.Estado
                                        </span>
                                    </td>
                                    <td>@item.MetodoPago</td>
                                    <td>
                                        <span class="badge bg-info text-dark">@(item.ComprobantePago ?? "N/A")</span>
                                    </td>
                                    <td>BS @item.Total.ToString("N2")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.IdVenta" class="btn btn-sm btn-info">üëÅÔ∏è Ver</a>
                                            <a asp-action="Edit" asp-route-id="@item.IdVenta" class="btn btn-sm btn-warning">‚úèÔ∏è Editar</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Versi√≥n M√≥vil: Cards -->
            <div class="d-block d-md-none">
                @foreach (var item in Model)
                {
                    <div class="card mb-3" style="border-left: 4px solid var(--primary-color);">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h6 class="mb-1" style="color: #212529; font-weight: 700;">Venta #@item.IdVenta</h6>
                                    <small class="text-muted">@item.Fecha.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>
                                <span class="badge bg-@(item.Estado == "confirmada" ? "success" : item.Estado == "pendiente" ? "warning" : "danger")">
                                    @item.Estado
                                </span>
                            </div>
                            
                            <div class="mb-2">
                                <strong style="color: #495057;">Cliente:</strong> 
                                <span style="color: #212529;">@item.Cliente.Nombre</span>
                            </div>
                            
                            <div class="mb-2">
                                <strong style="color: #495057;">Vendedor:</strong> 
                                <span style="color: #212529;">@item.Vendedor.Nombre</span>
                            </div>
                            
                            <div class="row mb-2">
                                <div class="col-6">
                                    <strong style="color: #495057;">Tipo:</strong>
                                    <span class="badge bg-info">@item.TipoVenta</span>
                                </div>
                                <div class="col-6">
                                    <strong style="color: #495057;">Pago:</strong>
                                    <span style="color: #212529;">@item.MetodoPago</span>
                                </div>
                            </div>
                            
                            <div class="mb-2">
                                <strong style="color: #495057;">Comprobante:</strong>
                                <span class="badge bg-info text-dark">@(item.ComprobantePago ?? "N/A")</span>
                            </div>
                            
                            <div class="mb-3">
                                <strong style="color: #495057;">Total:</strong>
                                <span style="color: #28a745; font-size: 1.2rem; font-weight: 700;">BS @item.Total.ToString("N2")</span>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-id="@item.IdVenta" class="btn btn-sm btn-info">üëÅÔ∏è Ver Detalles</a>
                                <a asp-action="Edit" asp-route-id="@item.IdVenta" class="btn btn-sm btn-warning">‚úèÔ∏è Editar</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
